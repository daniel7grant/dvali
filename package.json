{
    "name": "dvali",
    "version": "0.2.1",
    "description": "Simple, extensible, functional validation library written in TypeScript",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "prepare": "npm run build",
        "size": "npm run build && size-limit",
        "test": "nyc ava -v",
        "test:watch": "ava -v --watch"
    },
    "keywords": [
        "validation",
        "sanitization",
        "transform"
    ],
    "sideEffect": false,
    "files": [
        "dist/**/*"
    ],
    "author": "Daniel Grant",
    "license": "MIT",
    "homepage": "https://github.com/daniel7grant/dvali",
    "repository": {
        "type": "git",
        "url": "https://github.com/daniel7grant/dvali"
    },
    "devDependencies": {
        "@ava/typescript": "^2.0.0",
        "@size-limit/preset-small-lib": "^4.5.5",
        "ava": "^3.15.0",
        "doctoc": "^2.0.1",
        "nyc": "^15.1.0",
        "prettier": "^2.3.2",
        "size-limit": "^5.0.2",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "ava": {
        "typescript": {
            "rewritePaths": {
                "src/": "dist/"
            },
            "compile": false
        },
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "all": true,
        "include": [
            "src/**"
        ],
        "reporter": [
            "html"
        ],
        "report-dir": ".coverage"
    },
    "size-limit": [
        {
            "path": "dist/validate.js",
            "limit": "1 kB",
            "import": "validate"
        },
        {
            "path": "dist/index.js",
            "limit": "5 kB",
            "import": "{ Failure, Ignore, Success, validate, isEmail, toString, insensitiveEquals, length, minLength, isUrl, maxLength, betweenLength, isString, validateRegex, oneOf, optional, validateCondition, arrayOf, bail, tryDate, after, inRange, before, toDate, isDate, falsey, truthy, isBool, toBool, tryBool, lt, tryInt, lte, gte, tryNumber, gt, closeTo, toNumber, isInt, isNumber, toInt, between, equals, ceil, clamp, floor, round, lower, normalize, trim, truncate, upper }"
        }
    ]
}
