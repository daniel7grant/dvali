{
    "name": "dvali",
    "version": "0.2.6",
    "description": "Simple, extensible, functional validation library written in TypeScript",
    "main": "./dist/index.js",
    "module": "./es/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "require": "./dist/index.js",
        "import": "./es/index.js",
        "default": "./es/index.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc -p tsconfig.es.json",
        "prepare": "npm run build",
        "size": "npm run build && size-limit",
        "test": "jest",
        "test:watch": "jest --watch --coverage=false"
    },
    "keywords": [
        "validation",
        "sanitization",
        "transform"
    ],
    "sideEffects": false,
    "files": [
        "dist/**/*",
        "es/**/*"
    ],
    "author": "Daniel Grant",
    "license": "MIT",
    "homepage": "https://github.com/daniel7grant/dvali",
    "repository": {
        "type": "git",
        "url": "https://github.com/daniel7grant/dvali"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.4",
        "@types/jest": "^27.4.0",
        "doctoc": "^2.1.0",
        "jest": "^27.4.7",
        "jest-ts-webcompat-resolver": "^1.0.0",
        "prettier": "^2.3.2",
        "size-limit": "^7.0.4",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.1.0",
        "typescript": "^4.5.4"
    }
}
